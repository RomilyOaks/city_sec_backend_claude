{
  "name": "citizen-security-backend",
  "version": "1.0.0",
  "description": "API Backend para Sistema de Seguridad Ciudadana con autenticaciÃ³n JWT y RBAC",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "swagger": "node swagger.js",
    "tree-gen": "find src -path 'src/node_modules' -prune -o -name '.git' -prune -o -print | sed 's|^[^/]*/||g' | sed 's/[^/]*\\//|--/g;s/|--/|  /g' | sed 's/|/|/g'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "db:seed": "node src/seeders/index.js",
    "seed:rbac": "node src/seeders/seedRBAC.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo"
  },
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "express",
    "sequelize",
    "mysql",
    "seguridad",
    "ciudadana",
    "security",
    "citizen",
    "jwt",
    "rbac"
  ],
  "author": "Romily Robles",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^2.1.0",
    "qrcode": "^1.5.4",
    "sequelize": "^6.37.7",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.1.4",
    "swagger-autogen": "^2.23.7",
    "tree-cli": "^0.6.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

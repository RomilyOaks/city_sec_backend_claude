              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  const firstId = json?.data?.[0]?.id;",
                  "  if (firstId && !pm.collectionVariables.get('personalId')) {",
                  "    pm.collectionVariables.set('personalId', String(firstId));",
                  "  }",
                  "} catch (e) {}",
                  "pm.test('Responde 200', function () {",

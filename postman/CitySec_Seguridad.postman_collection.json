              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "roles", "{{rolId}}", "permisos", "{{permisoId}}"]
            }
          }
        },
        {
          "name": "Eliminar rol (DELETE /roles/:id)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/roles/{{rolId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "roles", "{{rolId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "apiVersion", "value": "v1" },
    { "key": "token", "value": "" },
    { "key": "rolId", "value": "1" },
    { "key": "permisoSlug", "value": "usuarios.usuarios.read" },
    { "key": "permisoId", "value": "1" }
  ]
}

            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/roles/{{rolId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "roles", "{{rolId}}"]
            }
          }
        },
        {
          "name": "Listar permisos del rol (GET /roles/:id/permisos)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/roles/{{rolId}}/permisos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "roles", "{{rolId}}", "permisos"]
            }
          }
        },
        {
          "name": "Asignar permisos al rol (POST /roles/:id/permisos) (usa permisoId)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permisos\": [{{permisoId}}]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/roles/{{rolId}}/permisos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "roles", "{{rolId}}", "permisos"]
            }
          }
        },
        {
          "name": "Quitar permiso del rol (DELETE /roles/:id/permisos/:permisoId)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {

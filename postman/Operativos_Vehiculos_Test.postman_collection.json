                  "        var vehiculo = jsonData.data[0];",
                  "        ",
                  "        // Verificar relaciones básicas",
                  "        pm.expect(vehiculo).to.have.property('vehiculo');",
                  "        ",
                  "        // Verificar nuevas relaciones agregadas",
                  "        console.log('tipo_copiloto:', vehiculo.tipo_copiloto);",
                  "        console.log('radio_tetra:', vehiculo.radio_tetra);",
                  "        console.log('estado_operativo:', vehiculo.estado_operativo);",
                  "        ",
                  "        // Guardar ID para pruebas posteriores",
                  "        pm.environment.set('vehiculoOperativoId', vehiculo.id);",
                  "    }",
                  "});",
                  "",
                  "pm.test('Modelo carga sin errores de asociación', function() {",
                  "    pm.response.to.not.have.status(500);",
                  "});"
